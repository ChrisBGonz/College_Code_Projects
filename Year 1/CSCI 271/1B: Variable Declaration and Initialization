
#include <iostream>
using namespace std;

int main()
{
    int a;
    
    cout << "Value of var. a after the declaration: " << a << endl;
    
    a = 4;
    
    cout << a << endl;
    
    cout << "Value of var. a after its initialization: " << a << endl;
    
    return 0;
}
// The point of this is to show you the importance of initializing a variable before declaring it.
